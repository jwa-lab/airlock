{
    "name": "airlock",
    "version": "0.0.8",
    "description": "Airlock is an HTTP<->NATS bridge granting access to the JWA platform's resources",
    "main": "dist/index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "clean": "rm -rf ./dist/*",
        "lint": "eslint ./src/ --ext .ts --max-warnings 0",
        "prettier": "prettier --write .",
        "build": "npx tsc",
        "start": "node ./dist/index.js",
        "dev": "concurrently \"npx tsc -w\" \"nodemon dist/index.js\"",
        "test": "jest tests/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwa-lab/airlock.git"
    },
    "keywords": [
        "Airlock",
        "JWA",
        "LAB",
        "REST",
        "NATS",
        "platform"
    ],
    "author": "JWA Lab",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/jwa-lab/airlock/issues"
    },
    "homepage": "https://github.com/jwa-lab/airlock#readme",
    "devDependencies": {
        "@tsconfig/node14": "^1.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.20",
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.14.22",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "axios": "^0.21.1",
        "concurrently": "^5.3.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "jest": "^26.6.3",
        "jest-environment-node": "^26.6.2",
        "node-jose": "^2.0.0",
        "nodemon": "^2.0.7",
        "openapi-types": "^9.0.3",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@okta/jwt-verifier": "^2.1.0",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "lodash": "^4.17.20",
        "nats": "^2.0.6",
        "uuid": "^8.3.2"
    },
    "jest": {
        "testEnvironment": "node"
    }
