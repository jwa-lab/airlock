{
    "name": "airlock",
    "version": "0.0.1",
    "description": "Airlock is a gRPC server granting access to the JWA platform's resources",
    "main": "dist/index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "clean": "rm -rf ./dist/*",
        "lint": "eslint ./src/ --ext .ts",
        "prettier": "prettier --write .",
        "build": "npx tsc",
        "start": "node ./dist/index.js",
        "dev": "concurrently \"npx tsc -w\" \"nodemon dist/index.js\"",
        "test": "jest tests/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwa-lab/airlock.git"
    },
    "keywords": [
        "Airlock",
        "JWA",
        "LAB",
        "gRPC",
        "NATS",
        "platform"
    ],
    "author": "JWA Lab",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/jwa-lab/airlock/issues"
    },
    "homepage": "https://github.com/jwa-lab/airlock#readme",
    "devDependencies": {
        "@grpc/proto-loader": "^0.5.5",
        "@tsconfig/node14": "^1.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.22",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "grpc": "^1.24.4",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "grpc-tools": "^1.10.0",
        "grpc_tools_node_protoc_ts": "^5.1.1",
        "nats": "^1.4.12",
        "ts-jest": "^26.4.4",
        "ts-nats": "^1.2.15",
        "ts-proto": "^1.50.0",
        "ts-protoc-gen": "^0.14.0"
    }
}
